---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="About — AstroDemo"
  description="Learn about AstroDemo: an open-source Astro starter showcasing static site generation, Content Collections, and accessible design."
>

  <!-- Page hero -->
  <section class="page-hero" aria-labelledby="about-heading">
    <div class="container page-hero-inner">
      <div class="page-hero-text">
        <div class="eyebrow">Open source starter</div>
        <h1 id="about-heading">Built for the modern web.</h1>
        <p class="lead">
          AstroDemo is a demonstration site that shows how to build a fast,
          accessible, content-focused website with the
          <a href="https://astro.build" rel="noopener noreferrer" target="_blank">Astro</a>
          framework — zero JavaScript shipped by default.
        </p>
      </div>
      <!-- Inline SVG illustration -->
      <div class="page-hero-art" aria-hidden="true">
        <svg viewBox="0 0 420 320" xmlns="http://www.w3.org/2000/svg" class="hero-svg">
          <!-- Browser chrome -->
          <rect x="20" y="20" width="380" height="280" rx="14" fill="var(--color-surface)" stroke="var(--color-border)" stroke-width="1.5"/>
          <rect x="20" y="20" width="380" height="44" rx="14" fill="var(--color-border)"/>
          <rect x="20" y="50" width="380" height="14" fill="var(--color-border)"/>
          <!-- Traffic lights -->
          <circle cx="50" cy="42" r="7" fill="#ff5f57"/>
          <circle cx="72" cy="42" r="7" fill="#febc2e"/>
          <circle cx="94" cy="42" r="7" fill="#28c840"/>
          <!-- URL bar -->
          <rect x="120" y="32" width="200" height="20" rx="10" fill="var(--color-bg)" stroke="var(--color-border)" stroke-width="1"/>
          <text x="220" y="45" text-anchor="middle" font-size="9" fill="var(--color-text-muted)" font-family="monospace">astrodemo.dev</text>
          <!-- Sticky header bar -->
          <rect x="20" y="64" width="380" height="36" fill="var(--color-bg)" stroke="var(--color-border)" stroke-width="1" stroke-dasharray="0"/>
          <text x="46" y="87" font-size="11" font-weight="bold" fill="var(--color-text)" font-family="sans-serif">Astro<tspan fill="var(--color-primary)">Demo</tspan></text>
          <rect x="300" y="75" width="36" height="14" rx="7" fill="var(--color-primary)"/>
          <text x="318" y="85" text-anchor="middle" font-size="7" fill="white" font-family="sans-serif">Blog</text>
          <rect x="344" y="75" width="46" height="14" rx="7" fill="var(--color-surface)" stroke="var(--color-border)" stroke-width="1"/>
          <text x="367" y="85" text-anchor="middle" font-size="7" fill="var(--color-text-muted)" font-family="sans-serif">About</text>
          <!-- Hero area inside browser -->
          <rect x="20" y="100" width="380" height="100" fill="#0a0a14"/>
          <!-- Stars in hero -->
          <circle cx="60" cy="125" r="1" fill="white" opacity="0.7"/>
          <circle cx="120" cy="115" r="1.5" fill="white" opacity="0.5"/>
          <circle cx="200" cy="130" r="1" fill="white" opacity="0.8"/>
          <circle cx="280" cy="120" r="1" fill="white" opacity="0.6"/>
          <circle cx="350" cy="140" r="1.5" fill="white" opacity="0.4"/>
          <circle cx="90" cy="150" r="1" fill="white" opacity="0.9"/>
          <circle cx="160" cy="145" r="1" fill="white" opacity="0.5"/>
          <circle cx="310" cy="155" r="1" fill="white" opacity="0.7"/>
          <circle cx="380" cy="125" r="1" fill="white" opacity="0.6"/>
          <circle cx="40" cy="175" r="1" fill="white" opacity="0.3"/>
          <circle cx="240" cy="170" r="1.5" fill="white" opacity="0.5"/>
          <text x="210" y="160" text-anchor="middle" font-size="16" font-weight="bold" fill="white" font-family="sans-serif">Fast websites,</text>
          <text x="210" y="180" text-anchor="middle" font-size="16" font-weight="bold" fill="white" font-family="sans-serif">by default.</text>
          <!-- Cards row -->
          <rect x="30" y="210" width="110" height="70" rx="8" fill="var(--color-bg)" stroke="var(--color-border)" stroke-width="1"/>
          <rect x="36" y="218" width="50" height="5" rx="2.5" fill="var(--color-text-muted)" opacity="0.5"/>
          <rect x="36" y="228" width="90" height="7" rx="3.5" fill="var(--color-text)" opacity="0.8"/>
          <rect x="36" y="241" width="80" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
          <rect x="36" y="249" width="70" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
          <rect x="155" y="210" width="110" height="70" rx="8" fill="var(--color-bg)" stroke="var(--color-border)" stroke-width="1"/>
          <rect x="161" y="218" width="50" height="5" rx="2.5" fill="var(--color-text-muted)" opacity="0.5"/>
          <rect x="161" y="228" width="90" height="7" rx="3.5" fill="var(--color-text)" opacity="0.8"/>
          <rect x="161" y="241" width="80" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
          <rect x="161" y="249" width="70" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
          <rect x="280" y="210" width="110" height="70" rx="8" fill="var(--color-bg)" stroke="var(--color-border)" stroke-width="1"/>
          <rect x="286" y="218" width="50" height="5" rx="2.5" fill="var(--color-text-muted)" opacity="0.5"/>
          <rect x="286" y="228" width="90" height="7" rx="3.5" fill="var(--color-text)" opacity="0.8"/>
          <rect x="286" y="241" width="80" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
          <rect x="286" y="249" width="70" height="4" rx="2" fill="var(--color-text-muted)" opacity="0.4"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Goals section -->
  <section class="goals-section" aria-labelledby="goals-heading">
    <div class="container">
      <h2 id="goals-heading" class="section-title">Project goals</h2>
      <ul class="goals-grid" role="list">
        <li class="goal-card">
          <span class="goal-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                 stroke-linejoin="round">
              <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
            </svg>
          </span>
          <h3>Zero unnecessary JavaScript</h3>
          <p>Pages are pure HTML and CSS at load time. Every KB of JavaScript is a deliberate choice, not a framework default.</p>
        </li>
        <li class="goal-card">
          <span class="goal-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                 stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </span>
          <h3>Accessibility by default</h3>
          <p>WCAG 2.1 AA out of the box: skip links, semantic HTML, keyboard navigation, and verified contrast ratios.</p>
        </li>
        <li class="goal-card">
          <span class="goal-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                 stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"/>
              <polyline points="8 6 2 12 8 18"/>
            </svg>
          </span>
          <h3>TypeScript throughout</h3>
          <p>Strict mode, no <code>any</code>, typed component props. The compiler catches issues before they reach production.</p>
        </li>
        <li class="goal-card">
          <span class="goal-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                 stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <line x1="3" y1="9" x2="21" y2="9"/>
              <line x1="9" y1="21" x2="9" y2="9"/>
            </svg>
          </span>
          <h3>AI-friendly structure</h3>
          <p>Conventions, slash commands, and CLAUDE.md make this a ready-made launchpad for AI-assisted development workflows.</p>
        </li>
      </ul>
    </div>
  </section>

  <!-- Tech stack -->
  <section class="stack-section" aria-labelledby="stack-heading">
    <div class="container stack-inner">
      <div class="stack-text">
        <h2 id="stack-heading" class="section-title">Tech stack</h2>
        <dl class="stack-list">
          <div class="stack-row">
            <dt>Framework</dt>
            <dd>Astro 4 — static output, no server runtime required</dd>
          </div>
          <div class="stack-row">
            <dt>Language</dt>
            <dd>TypeScript in strict mode throughout every file</dd>
          </div>
          <div class="stack-row">
            <dt>Styling</dt>
            <dd>CSS custom properties for design tokens; scoped styles per component</dd>
          </div>
          <div class="stack-row">
            <dt>Content</dt>
            <dd>Markdown via Astro Content Collections, validated with Zod</dd>
          </div>
          <div class="stack-row">
            <dt>Package manager</dt>
            <dd>npm</dd>
          </div>
          <div class="stack-row">
            <dt>Deploy</dt>
            <dd>GitHub Actions → GitHub Pages (zero-config CI/CD)</dd>
          </div>
        </dl>
      </div>

      <!-- Stack diagram SVG -->
      <div class="stack-diagram" aria-hidden="true">
        <svg viewBox="0 0 280 340" xmlns="http://www.w3.org/2000/svg" class="stack-svg">
          <!-- Layers -->
          <rect x="20" y="20" width="240" height="50" rx="10" fill="var(--color-primary)" opacity="0.15" stroke="var(--color-primary)" stroke-width="1.5"/>
          <text x="140" y="40" text-anchor="middle" font-size="11" font-weight="700" fill="var(--color-primary)" font-family="sans-serif">Astro 4</text>
          <text x="140" y="56" text-anchor="middle" font-size="9" fill="var(--color-primary)" font-family="sans-serif" opacity="0.8">Static Site Generator</text>

          <line x1="140" y1="70" x2="140" y2="90" stroke="var(--color-border)" stroke-width="1.5" stroke-dasharray="4"/>

          <rect x="20" y="90" width="240" height="50" rx="10" fill="var(--color-accent)" opacity="0.12" stroke="var(--color-accent)" stroke-width="1.5"/>
          <text x="140" y="110" text-anchor="middle" font-size="11" font-weight="700" fill="var(--color-accent)" font-family="sans-serif">TypeScript</text>
          <text x="140" y="126" text-anchor="middle" font-size="9" fill="var(--color-accent)" font-family="sans-serif" opacity="0.8">Strict mode · typed props</text>

          <line x1="140" y1="140" x2="140" y2="160" stroke="var(--color-border)" stroke-width="1.5" stroke-dasharray="4"/>

          <rect x="20" y="160" width="240" height="50" rx="10" fill="var(--color-surface)" stroke="var(--color-border)" stroke-width="1.5"/>
          <text x="140" y="180" text-anchor="middle" font-size="11" font-weight="700" fill="var(--color-text)" font-family="sans-serif">CSS Custom Properties</text>
          <text x="140" y="196" text-anchor="middle" font-size="9" fill="var(--color-text-muted)" font-family="sans-serif">Design tokens · dark mode</text>

          <line x1="140" y1="210" x2="140" y2="230" stroke="var(--color-border)" stroke-width="1.5" stroke-dasharray="4"/>

          <rect x="20" y="230" width="240" height="50" rx="10" fill="var(--color-surface)" stroke="var(--color-border)" stroke-width="1.5"/>
          <text x="140" y="250" text-anchor="middle" font-size="11" font-weight="700" fill="var(--color-text)" font-family="sans-serif">Content Collections + Zod</text>
          <text x="140" y="266" text-anchor="middle" font-size="9" fill="var(--color-text-muted)" font-family="sans-serif">Type-safe Markdown</text>

          <line x1="140" y1="280" x2="140" y2="300" stroke="var(--color-border)" stroke-width="1.5" stroke-dasharray="4"/>

          <rect x="20" y="300" width="240" height="30" rx="10" fill="var(--color-surface)" stroke="var(--color-border)" stroke-width="1.5"/>
          <text x="140" y="320" text-anchor="middle" font-size="9" fill="var(--color-text-muted)" font-family="sans-serif">GitHub Pages · Netlify · Vercel · Any CDN</text>
        </svg>
      </div>
    </div>
  </section>

  <!-- Principles (timeline-style) -->
  <section class="principles-section" aria-labelledby="principles-heading">
    <div class="container">
      <h2 id="principles-heading" class="section-title">Development principles</h2>
      <ol class="principles-list" role="list">
        <li class="principle">
          <span class="principle-number" aria-hidden="true">01</span>
          <div class="principle-body">
            <h3>Read before you write</h3>
            <p>Understand existing code before modifying it. Every file has context and intent — ignoring it creates technical debt.</p>
          </div>
        </li>
        <li class="principle">
          <span class="principle-number" aria-hidden="true">02</span>
          <div class="principle-body">
            <h3>Minimal and focused changes</h3>
            <p>Only add what the task requires. No speculative abstractions, no future-proofing, no unnecessary refactors alongside bug fixes.</p>
          </div>
        </li>
        <li class="principle">
          <span class="principle-number" aria-hidden="true">03</span>
          <div class="principle-body">
            <h3>Performance is a feature</h3>
            <p>Every dependency, every script tag, every image has a cost. We measure, we question, and we only pay for what genuinely helps users.</p>
          </div>
        </li>
        <li class="principle">
          <span class="principle-number" aria-hidden="true">04</span>
          <div class="principle-body">
            <h3>Accessibility is non-negotiable</h3>
            <p>Not a checklist item — a baseline. WCAG AA compliance, keyboard navigation, and screen reader support are required, not optional.</p>
          </div>
        </li>
        <li class="principle">
          <span class="principle-number" aria-hidden="true">05</span>
          <div class="principle-body">
            <h3>Build quality in from the start</h3>
            <p><code>npm run check</code> and <code>npm run build</code> must pass with zero errors before any commit reaches the repository.</p>
          </div>
        </li>
      </ol>
    </div>
  </section>

  <!-- License -->
  <section class="license-section" aria-labelledby="license-heading">
    <div class="container">
      <div class="license-card">
        <div class="license-icon" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
               fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
               stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
        </div>
        <div>
          <h2 id="license-heading">MIT License</h2>
          <p>
            AstroDemo is released under the
            <a href="https://opensource.org/licenses/MIT" rel="noopener noreferrer" target="_blank">MIT License</a>.
            Use it, fork it, build on it — for personal projects, client work, or commercial products.
            No attribution required, though it's always appreciated.
          </p>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  /* ── Page hero ────────────────────────────────────── */
  .page-hero {
    border-bottom: 1px solid var(--color-border);
    padding-block: var(--space-16);
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-primary) 5%, var(--color-bg)),
      var(--color-bg)
    );
  }

  .page-hero-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  @media (max-width: 52rem) {
    .page-hero-inner { grid-template-columns: 1fr; }
    .page-hero-art   { display: none; }
  }

  .eyebrow {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-4);
  }

  h1 {
    font-size: clamp(var(--text-3xl), 4vw, 3rem);
    margin-bottom: var(--space-6);
    letter-spacing: -0.03em;
  }

  .lead {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .hero-svg {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
  }

  /* ── Goals ────────────────────────────────────────── */
  .goals-section {
    padding-block: var(--space-16);
    border-bottom: 1px solid var(--color-border);
  }

  .section-title {
    margin-bottom: var(--space-8);
    letter-spacing: -0.02em;
  }

  .goals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: var(--space-6);
    list-style: none;
  }

  .goal-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-6);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .goal-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .goal-icon {
    color: var(--color-primary);
    display: block;
  }

  .goal-card h3 {
    font-size: var(--text-lg);
    font-weight: 600;
  }

  .goal-card p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.65;
  }

  /* ── Tech stack ───────────────────────────────────── */
  .stack-section {
    padding-block: var(--space-16);
    border-bottom: 1px solid var(--color-border);
  }

  .stack-inner {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-12);
    align-items: start;
  }

  @media (max-width: 52rem) {
    .stack-inner { grid-template-columns: 1fr; }
    .stack-diagram { display: none; }
  }

  .stack-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-top: var(--space-2);
  }

  .stack-row {
    display: grid;
    grid-template-columns: 9rem 1fr;
    gap: var(--space-4);
    align-items: baseline;
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }

  .stack-row:last-child {
    border-bottom: none;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  dd {
    margin: 0;
    color: var(--color-text);
    font-size: var(--text-sm);
    line-height: 1.6;
  }

  .stack-svg {
    width: 220px;
    height: auto;
  }

  /* ── Principles ───────────────────────────────────── */
  .principles-section {
    padding-block: var(--space-16);
    border-bottom: 1px solid var(--color-border);
  }

  .principles-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    list-style: none;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .principle {
    display: flex;
    gap: var(--space-6);
    padding: var(--space-6);
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.15s;
  }

  .principle:last-child { border-bottom: none; }

  .principle:hover {
    background: var(--color-surface);
  }

  .principle-number {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: color-mix(in srgb, var(--color-primary) 30%, var(--color-border));
    font-variant-numeric: tabular-nums;
    letter-spacing: -0.04em;
    flex-shrink: 0;
    width: 2.5rem;
  }

  .principle-body h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }

  .principle-body p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.65;
  }

  .principle-body code {
    font-size: 0.85em;
    background: var(--color-border);
    border-radius: var(--radius-sm);
    padding: 0.1em 0.35em;
    font-family: var(--font-mono);
  }

  /* ── License ──────────────────────────────────────── */
  .license-section {
    padding-block: var(--space-16);
  }

  .license-card {
    display: flex;
    gap: var(--space-6);
    align-items: flex-start;
    padding: var(--space-8);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    max-width: 48rem;
  }

  .license-icon {
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: var(--space-1);
  }

  .license-card h2 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
  }

  .license-card p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.7;
  }
</style>
